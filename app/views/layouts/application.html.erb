<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", "https://fonts.googleapis.com/css?family=Montserrat:400,700", media: "all" %>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
  </head>

  <body>

    <nav class="navbar">
      <% if signed_in? %>
        <a class="signed-in-as">Welcome, <%= current_user.username  %></a>
        <a href="#"><%= link_to "Logout", session_url, :class => "right-nav", method: :delete %></a>
        <a href="#"><%= link_to "Home", links_url, :class => "right-nav", method: :get %></a>
      <% else %>
          <a class="signed-in-as">Howdy, Stranger</a>
          <a href="#"><%= link_to "Sign Up", new_user_url, :class => "right-nav" %></a>
          <a href="#"><%= link_to "Sign In", new_session_url, :class => "right-nav" %></a>
      <% end %>
    </nav>

      <% flash[:errors].try(:each) do |err| %>
        <div class="errors">
          <%= err %>
        </div>
      <% end %>

    <%= yield %>
  </body>
</html>
