<h1>Create New Mood to Write Articles About</h1>
<%= button_to "Home", links_url, method: :get %>

<form id='newMood' action="<%= links_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

<label id='title'>
  <h2>Title</h2>
  <input id='title-field' type="text" name="link[title]" value="<%= @link.title %>">
</label>

<label id='body'>
  <h2>Body</h2>
  <textarea rows="18" cols="90" name="link[url]" value="<%= @link.url %>" placeholder="What Kind of Moods Would you like to Put in here?"></textarea>
</label>

<br>

<input id='submit-btn' type="submit" name="" value="Submit Post">

</form>
