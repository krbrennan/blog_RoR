<div class="show-links">

  <div class="show-links-header">
    <div class="show-links-title">
      <h2>Mood:</h2>
      <h3 class='link-title'><%= @link.title %></h3>
      <h4>Description: <%= @link.url %></h4>
      <%= link_to "Edit Mood", edit_link_url(@link.id), :class => 'edit-button', method: :get %>
      <hr class='links-hr'>
    </div>
      <!-- want a link_to new article here -->
      <div class="create-article-btn-div">
        <%= link_to 'Create Article', new_link_article_url(@link), :title => @link.title, :class => 'show-links-create-article' %>
      </div>
  </div>
</div>


  <!-- want a list of all associated articles here -->
<div class="articles-made">

  <table class='articles-table'>
    <thead class='articles-made-head'>
      <td>Date</td>
      <td>Submitted By</td>
      <td>How it Begins</td>
    </thead>
    <tbody>
      <% @link.articles.each do |article| %>
        <tr class='article-info'>
          <td><%= article.date %></td>
          <td class='middle-article'><%= article.user.username %></td>
          <td><%= link_to article.body.split[0..6].join(' ') , article_url(article)%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
