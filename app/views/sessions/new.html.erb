<div class="sign-in-session">
  <h1>Sign In!</h1>

  <form class='sign-in-form' action="/session" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label>
      Username
      <input class='field' type="text" name="user[username]" value="">
    </label>

    <label>
      Password
      <input class='field' type="password" name="user[password]" value="">
    </label>

    <input class='submit-button' type="submit" value="Sign In">

  </form>
  
</div>
